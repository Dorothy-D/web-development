function isPrimeNumber(n) {
  let counter = 0
  if (n < 2) {
    return 'Number must be greater than 1'
  } else {
      for (let i = 2; i <= n; i++) { 
          if (n % i == 0) {
              counter += 1
          }
      }
  }
  if (counter == 1) {
      console.log(n, ' is prime number')
  } else {
      console.log(n, ' is not prime number')
  }
}
